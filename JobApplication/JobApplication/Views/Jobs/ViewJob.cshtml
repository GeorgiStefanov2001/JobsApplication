@using JobApplication.Data.Models;

@{
    ViewData["Title"] = "View job";
    Job job = ViewData["Job"] as Job;
}

<div class="list-group">
    <ul class="list-unstyled">
        <li class="list-inline-item">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">@job.Name</h2>
                    <h3>Employer: @job.Employer</h3>
                    <h3 class="text-muted">Salary: @job.Salary lv.</h3>
                    <hr />
                    <p>@job.Description</p>
                    <hr />
                    <h4> Requirments: </h4>
                    <h5 style="padding-left: 50px;">Required Experience: @job.RequiredExperience years</h5>
                    <h5 style="padding-left: 50px;">Required Education: @job.RequiredEducation</h5>
                    <br />
                    <h5>Contact: @job.EmployerPhoneNumber</h5>
                    <h5>Location: @job.WorkPlace</h5>
                    <br />
                    <br />
                    <a class="btn btn-primary btn-rounded" asp-area="" asp-controller="Home" asp-action="Index">Back to all jobs</a>
                </div>
            </div>
        </li>
    </ul>
</div>

