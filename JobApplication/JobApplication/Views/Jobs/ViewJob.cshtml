@using JobApplication.Data.Models;

@{
    ViewData["Title"] = "View job";
    Job job = ViewData["Job"] as Job;
}

<div class="list-group">
    <ul class="list-unstyled">
        <li class="list-inline-item">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">@job.Name</h2>
                    <h3 class="text-muted">Salary: @job.Salary lv.</h3>
                    <p>@job.Description</p>
                    <h4> Requirments: </h4>
                    <h5>Required Experience: @job.RequiredExperience</h5>
                    <h5>Required Education: @job.RequiredEducation</h5>
                </div>
            </div>
        </li>
    </ul>
</div>

